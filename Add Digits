class Solution {
public:
    int addDigits(int num) {
        while(1)
        {
            int s;
            if(num<10)
            {
                return num;
            }
            else
            {
                s=0;
                while(num!=0)
                {
                    int r=num%10;
                    s+=r;
                    num=num/10;
                }
                num=s;
            }

        }
    }
};
